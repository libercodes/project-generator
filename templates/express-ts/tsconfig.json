{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist"
    },
    "lib": [
        "es6", 
        "es7",
        "es2017",
        "es2018",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts",
    ],
    "include": [
        "src/**/*.ts",
        ".eslintrc.js",
    ]
}